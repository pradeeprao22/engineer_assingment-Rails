<h1>Secretcode Generator</h1>

<p id="notice"><%= notice %></p>

<table>

  <thead>
    <tr>
      <th>Code</th>
      <th colspan="3"></th>
      <th>Email Associated</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @secretcodes.each do |secretcode| %>
      <tr>
        <td><%= secretcode.code %></td>
        <td><%= secretcode.user.email %></td>
      </tr>
    <% end %>
  </tbody>

</table>