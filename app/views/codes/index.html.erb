<p id="notice"><%= notice %></p>

<h1>Codes</h1>

<table>

  <thead>
    <tr>
      <th>Secretcode</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @codes.each do |code| %>

      <tr>

        <td><%= code.uuid %></td>
        
        <% # code.user.email %>

        <% if code.user %>

        <td><%= code.user.email %></td>

        <% else %>
        
        <td>Email is not associated</td>
        
        <% end %>

      </tr>
    <% end %>
  </tbody>

</table>
<br>

<%= link_to 'Generate Code', new_code_path %>
